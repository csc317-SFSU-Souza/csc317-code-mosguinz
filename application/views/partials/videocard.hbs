<div class="col">
    <div class="card">
        <img src="{{thumbnail}}" class="card-img-top" style="max-height: 200px" alt="{{title}}">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
        </div>
        <div class="card-footer">
            <p class="card-text"><small class="text-body-secondary">{{createdAt}}</small></p>
        </div>
        <a href="/viewpost/{{id}}" class="stretched-link"></a>
    </div>
</div>
